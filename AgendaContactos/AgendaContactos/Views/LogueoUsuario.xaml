<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaContactos.Views.LogueoUsuario">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingresa Usuario y Contraseña"
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="Nombre" Placeholder="Nombre" Text="joseg"/>
            <Entry x:Name="Contrasena" Placeholder="Contraseña" Text="1234" IsPassword="true"/>
            
            <Button Text="Iniciar Sesión" Clicked="LoginUser"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
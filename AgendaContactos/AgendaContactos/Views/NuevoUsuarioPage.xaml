<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaContactos.Views.NuevoUsuarioPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ingresa tus datos!"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="Nombre" Placeholder="Nombre" />
            <Entry x:Name="Contrasena" Placeholder="Contraseña" />
            <Button Text="Guardar" Clicked="GuardarAction"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>